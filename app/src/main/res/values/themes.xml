<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerceApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppBarTitleStyle">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Theme.ECommerceApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="bigTextTheme">
        <item name="android:textSize">17dp</item>
    </style>
    <style name="buttonTheme">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="SearchViewStyle">
        <item name="android:background">@drawable/search_view</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart">@drawable/icon_search</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>
    <style name="HeadLineTextViewCustomStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="GreenButtonCustomStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:paddingStart">@dimen/dp_25</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_25</item>
    </style>
    <style name="AccountItemStyle">
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewCustomStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewRegular" parent="TextViewCustomStyle">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>
    <style name="textTheme">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/filledBlack</item>
    </style>

    <style name="Theme.ECommerceApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ECommerceApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>