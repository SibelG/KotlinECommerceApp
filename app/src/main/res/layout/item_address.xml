<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_name_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Gulshan Patidar" />

            <TextView
                android:id="@+id/house_number_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name_address"
                app:layout_constraintTop_toBottomOf="@id/user_name_address"
                tools:text="House no. 5, ward no. 1" />

            <TextView
                android:id="@+id/street_name_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name_address"
                app:layout_constraintTop_toBottomOf="@id/house_number_address"
                tools:text="Near Ram Mandir" />

            <TextView
                android:id="@+id/city_pincode_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name_address"
                app:layout_constraintTop_toBottomOf="@id/street_name_address"
                tools:text="Mandsaur, Madhya Pradesh 458778" />

            <TextView
                android:id="@+id/phone_number_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name_address"
                app:layout_constraintTop_toBottomOf="@id/city_pincode_address"
                tools:text="Phone number - 7822888840" />

            <Button
                android:id="@+id/edit_address_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Edit"
                app:layout_constraintStart_toStartOf="@id/phone_number_address"
                app:layout_constraintTop_toBottomOf="@id/phone_number_address" />

            <Button
                android:id="@+id/delete_address_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="8dp"
                android:text="Delete"

                app:layout_constraintEnd_toEndOf="@id/phone_number_address"
                app:layout_constraintTop_toBottomOf="@id/phone_number_address" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>