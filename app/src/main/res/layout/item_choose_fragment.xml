<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_address_choose_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_button_choose_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/user_name_choose_address"
                app:layout_constraintBottom_toBottomOf="@id/phone_number_choose_address"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/user_name_choose_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/radio_button_choose_address"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Gulshan Patidar" />

            <TextView
                android:id="@+id/house_number_choose_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name_choose_address"
                app:layout_constraintTop_toBottomOf="@id/user_name_choose_address"
                tools:text="House no. 5, ward no. 1" />

            <TextView
                android:id="@+id/street_name_choose_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name_choose_address"
                app:layout_constraintTop_toBottomOf="@id/house_number_choose_address"
                tools:text="Near Ram Mandir" />

            <TextView
                android:id="@+id/city_pincode_choose_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name_choose_address"
                app:layout_constraintTop_toBottomOf="@id/street_name_choose_address"
                tools:text="Mandsaur, Madhya Pradesh 458778" />

            <TextView
                android:id="@+id/phone_number_choose_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/user_name_choose_address"
                app:layout_constraintTop_toBottomOf="@id/city_pincode_choose_address"
                tools:text="Phone number - 7822888840" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>