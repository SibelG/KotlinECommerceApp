<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_order_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/products_name_item_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="The Great Khali, mi charger, maticdo, wazirx ki website, colgate super flexi"/>

            <TextView
                android:id="@+id/order_status_item_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/products_name_item_order"
                app:layout_constraintStart_toStartOf="@id/products_name_item_order"
                app:layout_constraintEnd_toEndOf="@id/products_name_item_order"
                android:layout_marginTop="16dp"
                tools:text="Order Placed"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:textColor="#9FE318"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
